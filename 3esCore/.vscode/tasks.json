{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "args": [
        "build",
        "-c", "${input:build_config}",
        "-property:GenerateFullPaths=true"
      ],
      "type": "shell",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      "command": "dotnet",
      "windows": {
        "args": [
          "publish",
          "-f", "netcoreapp2.2",
          "-c", "${input:build_config}",
          "-o", "${workspaceFolder}\\build\\Debug",
          "-property:GenerateFullPaths=true",
          "-r", "win10-x64"
        ]
      },
      "linux": {
        "args": [
          "publish",
          "-f", "netcoreapp2.2",
          "-c", "${input:build_config}",
          "-o", "${workspaceFolder}/build/Debug",
          "-property:GenerateFullPaths=true",
          "-r", "linux-x64"
        ]
      },
      "osx": {
        "args": [
          "publish",
          "-f", "netcoreapp2.2",
          "-c", "${input:build_config}",
          "-o", "${workspaceFolder}/build/Debug",
          "-property:GenerateFullPaths=true",
          "-r", "osx-x64"
        ]
      },
      "type": "shell",
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "marshal",
      "dependsOn": "build",
      "command": "python unity-marshal.py -c ${input:build_config}",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": "$msCompile"
    }
  ],
  "inputs": [
    {
      "id": "build_config",
      "type": "pickString",
      "options": [ "Debug", "Release" ],
      "default": "Debug",
      "description": "Build configuration selection."
    }
  ]
}
